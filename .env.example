# Network Settings
CHAIN_ID=1
RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
WS_URL=wss://mainnet.infura.io/ws/v3/YOUR-PROJECT-ID

# Application Settings
NODE_ENV=development
PORT=3000
ENABLE_API=true

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=false

COINBASE_API_KEY=your_coinbase_api_key
COINBASE_API_SECRET=your_coinbase_api_secret
COINBASE_PASSPHRASE=your_coinbase_passphrase

KRAKEN_API_KEY=your_kraken_api_key
KRAKEN_API_SECRET=your_kraken_api_secret

HUOBI_API_KEY=your_huobi_api_key
HUOBI_API_SECRET=your_huobi_api_secret

KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_API_SECRET=your_kucoin_api_secret
KUCOIN_PASSPHRASE=your_kucoin_passphrase

# Arbitrage Settings
MIN_PROFIT_THRESHOLD=0.5
MAX_GAS_PRICE=50
SCAN_INTERVAL_MS=5000
MIN_VOLUME_THRESHOLD=1000
MAX_SLIPPAGE=0.5
MIN_LIQUIDITY_THRESHOLD=5000
MAX_EXECUTION_TIME=30000
SUPPORTED_PAIRS=BTC/USDT,ETH/USDT,BTC/ETH
VOLATILITY_THRESHOLD=0.5

# Execution Settings
MAX_CONCURRENT_EXECUTIONS=3
MIN_CONFIRMATION_BLOCKS=1
SLIPPAGE_TOLERANCE=0.5
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# Monitoring Settings
MONITORING_UPDATE_INTERVAL_MS=5000
ALERT_MIN_PROFIT_THRESHOLD=0.5
ALERT_MAX_EXECUTION_TIME=30000
MAX_PRICE_LATENCY=10000
MAX_MEMORY_USAGE=0.9
MAX_CPU_USAGE=0.8

# Logging Settings
LOG_LEVEL=info
LOG_FILE=logs/arbitrage.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Settings
MAX_FAILED_ATTEMPTS=3
LOCKOUT_DURATION=300000
API_RATE_LIMIT=100

# Database Settings
DATABASE_URL=mongodb://localhost:27017/arbitrage

# Cache Settings
CACHE_TTL=300
CACHE_MAX_SIZE=1000 